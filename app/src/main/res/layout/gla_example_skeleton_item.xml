<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/skeletonIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/gla_dp_16"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/gla_shape_skeleton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/skeletonTitle"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="@drawable/gla_shape_skeleton"
        android:layout_marginStart="@dimen/gla_dp_16"
        android:layout_marginEnd="96dp"
        app:layout_constraintBottom_toTopOf="@id/skeletonSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/skeletonIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/skeletonSubtitle"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="@dimen/gla_dp_16"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/gla_shape_skeleton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/skeletonTitle"
        app:layout_constraintStart_toStartOf="@id/skeletonTitle"
        app:layout_constraintTop_toBottomOf="@id/skeletonTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
